<div class="container">
  <div class="row border-bottom mb-2">
    <p class="fs-2 col">SITES</p>
    <%=link_to raw("<button class=\"btn btn-primary mt-1\"> Add Site <i class=\"fa fa-plus-square\"></i></button>"), new_site_path, class: "col text-end" %>
  </div>
  <table class="table table-bordered">
    <%= render partial: "shared/table_header", locals: { headers: ["UUID", "NAME", "PHONE", "EMAIL", "TIMEZONE", "LOCATION", "CITY", "STATE", "COUNTRY"] } %>
    <%= render partial: "shared/table_body", locals: { instances: @sites, rows: [:uuid, :name, :drug]} %>
  </table>
</div>
