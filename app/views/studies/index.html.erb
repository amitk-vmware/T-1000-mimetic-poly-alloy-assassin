<div class="container">
  <div class="row border-bottom mb-2">
    <p class="fs-2 col">STUDIES</p>
    <%=link_to raw("<button class=\"btn btn-primary mt-1\"> Add Study <i class=\"fa fa-plus-square\"></i></button>"), new_study_path, class: "col text-end" %>
  </div>
  <table class="table table-bordered">
    <%= render partial: "shared/table_header", locals: { headers: ["UUID", "NAME", "DRUG"] } %>
    <%= render partial: "shared/table_body", locals: { instances: @studies, rows: [:uuid, :name, :drug]} %>
  </table>
</div>
